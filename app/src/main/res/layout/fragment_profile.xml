        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_tool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_4sdp"
            app:cardBackgroundColor="@android:color/white"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:orientation="vertical"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fragment_home_account_profile_photo_circularImageView"
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_85sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/placeperson"
                    android:elevation="8dp"
                    />

                <TextView
                    android:id="@+id/fragment_my_profile_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Muhammad Usama"
                    android:layout_gravity="center"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_15ssp"
                    />
                <TextView
                    android:id="@+id/fragment_profile_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:drawableStart="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="01094944800"
                    android:textColor="@color/blue_black"
                    android:textSize="@dimen/_11ssp" />
                <TextView
                    android:id="@+id/fragment_profile_email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="mohamed123@gmail.com"
                    android:textColor="@color/blue_black"
                    android:textSize="@dimen/_11ssp" />
                <TextView
                    android:id="@+id/fragment_profile_city_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_baseline_location_city_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="cairo"
                    android:textColor="@color/blue_black"
                    android:textSize="@dimen/_11ssp" />


            </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_profile_logout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="@style/button_style"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_btn_blue_black_shape"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logout"
                        style="@style/button_text_style"
                        />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
