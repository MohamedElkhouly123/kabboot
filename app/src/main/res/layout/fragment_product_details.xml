<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:elevation="@dimen/_5sdp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_product_details_title_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wolf Vitaltech Full Syn.."
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="@dimen/_65sdp"
                android:layout_marginEnd="@dimen/_65sdp"
                android:elevation="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <ImageButton
                android:id="@+id/fragment_product_details_back_img"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/back_icon"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:elevation="@dimen/_5sdp"
                android:background="@drawable/gray_shape_trangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--            <ImageButton-->
            <!--                android:id="@+id/fragment_home_account_profile_more_bttn"-->
            <!--                android:layout_width="@dimen/_29sdp"-->
            <!--                android:layout_height="@dimen/_29sdp"-->
            <!--                android:src="@drawable/ic_more_vert_black_24dp"-->
            <!--                android:layout_gravity="right"-->
            <!--                android:elevation="@dimen/_5sdp"-->
            <!--                android:layout_marginStart="@dimen/_10sdp"-->
            <!--                android:layout_marginEnd="@dimen/_10sdp"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent"-->
            <!--                android:background="@color/white"-->
            <!--                />-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/_5sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_12sdp"
            android:paddingBottom="@dimen/_50sdp"
            android:paddingEnd="@dimen/_12sdp"
            >
            <com.tmall.ultraviewpager.UltraViewPager
                android:id="@+id/fragment_product_details_ultra_viewpager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:paddingStart="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"

                />
<!--            <ImageView-->
<!--                android:layout_width="@dimen/_180sdp"-->
<!--                android:layout_height="@dimen/_130sdp"-->
<!--                android:layout_gravity="center"-->
<!--                android:elevation="@dimen/_1sdp"-->
<!--                android:layout_marginTop="@dimen/_20sdp"-->
<!--                android:layout_marginStart="@dimen/_15sdp"-->
<!--                android:layout_marginEnd="@dimen/_15sdp"-->
<!--                android:src="@drawable/product"-->
<!--                />-->
            <TextView
                android:id="@+id/fragment_product_details_sub_category_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wolf"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />
            <TextView
                android:id="@+id/fragment_product_details_product_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VITALTECH 5W540 Full Synthetic Motor Oil - 14L"
                android:layout_marginTop="@dimen/_6sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />
            <TextView
                android:id="@+id/fragment_product_details_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="820 EGP"
                android:layout_marginTop="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/fragment_product_details_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:visibility="visible"
                android:text="This is a full synthetic lubricant based on carefully selected very high quality base oils and additives of the latest generation, specially designed to meet the strict requirements of manufacturers. These provide an excellent fluidity at low temperatures, a very low resistance when starting, an exceptional viscosity index and a very high thermal stability."
                android:textColor="@color/gray2"
                android:textSize="@dimen/_11ssp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Specifications"
                android:layout_marginTop="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/fragment_product_details_specifications_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:visibility="visible"
                android:text="This is a full synthetic lubricant based on carefully selected very high quality base oils and additives of the latest generation, specially designed to meet the strict requirements of manufacturers. These provide an excellent fluidity at low temperatures, a very low resistance when starting, an exceptional viscosity index and a very high thermal stability."
                android:textColor="@color/gray2"
                android:textSize="@dimen/_11ssp" />
            <TextView
                android:id="@+id/fragment_product_details_padding_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:visibility="gone"
                android:textColor="@color/gray2"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        >
    <FrameLayout
        android:id="@+id/fragment_product_details_view_cart_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        style="@style/button_style2"
        android:background="@drawable/gradient_btn_blue_black_shape3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_cart"
            android:layout_gravity="center"
            android:textSize="@dimen/_13ssp"
            style="@style/button_text_style"
            />
        <TextView
            android:id="@+id/fragment_product_details_items_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(1) Item"
            android:layout_gravity="start"
            android:textSize="@dimen/_12ssp"
            style="@style/button_text_style"
            />
        <TextView
            android:id="@+id/fragment_product_details_items_number_total_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EGP 800"
            android:layout_gravity="end"
            android:textSize="@dimen/_12ssp"
            style="@style/button_text_style"
            />
    </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="visible"
                style="@style/button_style2"
                android:layout_weight="3"
                android:background="@color/gray"
                >
                <ImageButton
                    android:id="@+id/fragment_product_details_items_minus_item_btn"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/ic_baseline_remove_24"
                    android:elevation="@dimen/_5sdp"

                    android:background="@drawable/gray_dark_shape_trangle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                />
                <TextView
                    android:id="@+id/fragment_product_details_items_rooms_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:elevation="3dp"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="0"
                    />
                <ImageButton
                    android:id="@+id/fragment_product_details_items_plus_item_btn"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/ic_baseline_add_24"
                    android:elevation="@dimen/_5sdp"
                    android:background="@drawable/red_shape_trangle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_product_details_items_add_to_card_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/button_style2"
                android:layout_weight="2"
                android:background="#505050"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_to_cart"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_13ssp"
                    style="@style/button_text_style"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>