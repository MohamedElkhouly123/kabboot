<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:paddingTop="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_fragment_on_line_store_main_rv2_hz_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        >
        <LinearLayout
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_200sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_12sdp"

            >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/card_view_fragment_on_line_store_main_rv2_hz_item_product_img"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_125sdp"
                android:scaleType="fitXY"
                android:src="@drawable/category_img" />
<!--            <ImageView-->
<!--                android:id="@+id/cardview_hz_discover_item_img_shadow_hide"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:visibility="gone"-->
<!--                android:layout_gravity="right"-->
<!--                android:background="@drawable/offer_white_shape"-->
<!--                android:src="@drawable/ic_whatshot_black_24dp" />-->



        </FrameLayout>
            <TextView
                android:id="@+id/card_view_fragment_on_line_store_main_rv2_hz_item_product_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name and brand"
                android:layout_marginTop="@dimen/_12sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/gray2"
                android:textSize="@dimen/_13ssp" />
            <TextView
                android:id="@+id/card_view_fragment_on_line_store_main_rv2_hz_item_product_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="579 EGP"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>