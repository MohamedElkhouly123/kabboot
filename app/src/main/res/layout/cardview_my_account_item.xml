<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_home_account_profile_cardview_my_account_item_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_1sdp"
        android:elevation="@dimen/_12sdp"
        app:cardBackgroundColor="@android:color/white"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/cardview_my_account_item_booking_img"
                    android:layout_width="@dimen/_63sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@color/blue_black"
                    android:src="@drawable/ic_baseline_store_mall_directory_24"
                    android:scaleType="centerCrop"


                    />
                <TextView
                    android:id="@+id/cardview_my_account_item_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="My Umrah Bookings"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="center"
                    android:textColor="@color/gray2"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right|center"
                >
                <!--            <TextView-->
                <!--                android:layout_width="@dimen/_20sdp"-->
                <!--                android:layout_height="@dimen/_20sdp"-->
                <!--                android:layout_gravity="center_vertical"-->
                <!--                android:text="1"-->
                <!--                android:textSize="@dimen/_12ssp"-->
                <!--                android:gravity="center"-->
                <!--                android:background="@drawable/gradient_btn_red_shape_for_num"-->
                <!--                android:textColor="@color/white"-->
                <!--                />-->
                <ImageButton
                    android:id="@+id/fragment_home_account_profile_cardview_my_account_item_next_btn"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/gray_shape_trangle"
                    />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>