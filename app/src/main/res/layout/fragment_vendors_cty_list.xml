<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="@dimen/_5sdp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_vendors_cty_list_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/city_filter"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="@dimen/_65sdp"
            android:layout_marginEnd="@dimen/_65sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:elevation="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"

            />
        <ImageButton
            android:id="@+id/fragment_vendors_cty_list_back_btn"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp"
            android:src="@drawable/back_icon"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginEnd="@dimen/_17sdp"
            android:elevation="@dimen/_5sdp"
            android:background="@drawable/gray_shape_trangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        >

        <com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragment_vendors_cty_list_s_fl_shimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--                                <include layout="@layout/cardview_general_vert_hajj_and_hotels_item" />-->
                <!--                <include layout="@layout/cardview_notifications_item" />-->
                <!--                <include layout="@layout/cardview_notifications_item" />-->
                <!--                <include layout="@layout/cardview_notifications_item" />-->
                <!--                <include layout="@layout/cardview_notifications_item" />-->
                <!--                <include layout="@layout/cardview_notifications_item" />-->
                <!--                <include layout="@layout/cardview_notifications_item" />-->


            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:id="@+id/fragment_vendors_cty_list_sr_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_vendors_cty_list_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_above="@+id/load_more"
                    android:scrollbars="vertical" />

                <include
                    layout="@layout/cardview_item_load_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />

                <include layout="@layout/error" />
                <!--                    <include layout="@layout/cardview_general_vert_hajj_and_hotels_item" />-->
                <include layout="@layout/not_found_result_error" />

            </RelativeLayout>

        </LinearLayout>

                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
